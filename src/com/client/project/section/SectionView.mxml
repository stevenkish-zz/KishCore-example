<kish:AbstractView
	xmlns:kish="library://www.unstukt.com/kishcore"
	xmlns:mx="library://ns.adobe.com/flex/mx" 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:display="flash.display.*" 
	>
	
	<fx:Script>
		<![CDATA[
			import com.client.project.animation.FadeIn;
			import com.client.project.animation.FadeOut;
		
			[Reveal]
			public var fadeIn:FadeIn;
		
			[Conceal]
			public var fadeOut:FadeOut;
			
			[Bindable]
			public var label:String;

			private function onChange(event : Event) : void 
			{
				event.stopPropagation();
				event.stopImmediatePropagation();
				
				graphics.clear();
				graphics.beginFill( controller.data.content );
				graphics.drawRect( title.x, title.y, title.textWidth+4, title.textHeight+4 );
				graphics.endFill();
			}	
		]]>
	</fx:Script>
	
	<kish:KText id="title"
		text="{label}"
		tags="p,h1"
		y="60" 
		change="onChange(event)"
		/>

</kish:AbstractView>